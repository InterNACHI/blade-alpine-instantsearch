{
	"name": "internachi/blade-alpine-instantsearch",
	"description": "Algolia instant search as Blade/Alpine.js components",
	"keywords": [
		"laravel",
		"algolia",
		"instantsearch"
	],
	"type": "library",
	"license": "MIT",
	"autoload": {
		"psr-4": {
			"InterNACHI\\BladeInstantSearch\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"InterNACHI\\BladeInstantSearch\\Tests\\": "tests/"
		}
	},
	"minimum-stability": "dev",
	"extra": {
		"laravel": {
			"providers": [
				"InterNACHI\\BladeInstantSearch\\Providers\\BladeInstantSearchProvider"
			]
		}
	},
	"require": {
		"php": ">=7.4",
		"illuminate/view": "^8.71|^9|^10|^11|dev-master",
		"illuminate/support": "^8.71|^9|^10|^11|dev-master"
	},
	"require-dev": {
		"orchestra/testbench": "^6|^7|^8|^9|9.x-dev|dev-master",
		"phpunit/phpunit": "^9.0|^10.5",
		"friendsofphp/php-cs-fixer": "^3.39"
	},
	"scripts": {
		"fix-style": "vendor/bin/php-cs-fixer fix",
		"check-style": "vendor/bin/php-cs-fixer fix --diff --dry-run"
	},
	"archive": {
		"exclude": [
			"/helpers",
			"/tests",
			"/js/src",
			"/js/package.json",
			"/js/yarn.lock"
		]
	}
}
